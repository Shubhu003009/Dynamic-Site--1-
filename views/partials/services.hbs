<section id='services_section' class='py-3'>
  <div class='container'>
    <h1 class='text-success'>Our services</h1>
    <div class='row mt-7'>

      {{! first service call }}

      {{#each services}}

        <div class='col-md-4'>
          <div class='card my-3'>
            <div class='card-body'>
              <div
                class='container text-center service-icon py-3 text-secondary'
              >
                <i class='{{this.icon}}'></i>
              </div>
              <h5 class='card-title'>{{this.title}}</h5>
              <p>{{this.description}}</p>

              <a href='#{{this.link}}'>{{this.linkText}}</a>
              <a href='#!' class='ml-3'>Support</a>
            </div>
          </div>
        </div>

      {{/each}}

    </div>
  </div>
</section>