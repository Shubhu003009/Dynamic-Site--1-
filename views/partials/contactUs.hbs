<section id='contact_us' class='py-5 background1'>
  <div class='container'>
    <h3 class='text-center text-secondary'>Contact us</h3>
    <div class='row'>
      <div class='col-md-12'>

        <form action='/process-contact-form' method='post'>
          {{! Email }}
          <div class='mb-3'>
            <label for='exampleInputEmail' class='form-label'>Your email address</label>
            <input
              type='email'
              name='email'
              class='form-control'
              id='exampleInputEmail1'
              required='true'
              aria-describedby='emailHelp'
              autocomplete='on'
            />
            <div id='emailHelp' class='form-text'>We'll never share your email
              with anyone else.</div>
          </div>
          {{! Number }}
          <div class='mb-3'>
            <label for='contactNumberField' class='form-label'>Your contact
              number</label>
            <input
              name='phone'
              required='true'
              type='number'
              class='form-control'
              id='exampleInputPassword1'
            />
          </div>

          {{! text Area }}
          <div class='form-floating my-3'>
            <textarea
              name='query'
              required='true'
              style='height: 250px;'
              class='form-control'
              placeholder='Enter your Query here'
              id='queryFiled'
            ></textarea>
            <label for='floatingTextarea'>Your Query</label>
          </div>

          {{! Submit }}
          <div class='container text-center'>
            <button type='submit' class='btn btn-dark'>Submit</button>
          </div>
        </form>

      </div>
    </div>
  </div>
</section>